      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok Link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube Link"
      },
      {
        "type": "header",
        "content": "Social Sharing"
      },
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show share buttons",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_social_icons",
        "label": "Show social icons in footer",
        "default": true
