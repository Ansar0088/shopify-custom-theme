{% comment %}
  ============================================================================
  SECTION: Image with Text Overlay
  Handles a full-width banner image with customizable text positioning and overlay.
  ============================================================================
{% endcomment %}

{% assign section_id = section.id %}
{% assign image = section.settings.image %}
{% assign mobile_image = section.settings.mobile_image %}
{% assign height_size = section.settings.image_size %}

{% comment %}
  Determine the height of the container based on user setting
{% endcomment %}
{% case height_size %}
  {% when 'original' %}
    {% assign height_class = 'h-auto' %}
  {% comment %} Min/Max heights for original ratio are just for safety, not strictly applied {% endcomment %}
  {% when 'x-small' %}
    {% assign height_class = 'h-[300px]' %}
  {% when 'small' %}
    {% assign height_class = 'h-[400px]' %}
  {% when 'medium' %}
    {% assign height_class = 'h-[550px]' %}
  {% when 'large' %}
    {% assign height_class = 'h-[700px]' %}
  {% when 'fit_screen' %}
    {% assign height_class = 'h-screen' %}{% endcase %}

{% comment %}
  Determine content width
{% endcomment %}
{% assign content_width = section.settings.content_width | default: 'medium' %}
{% case content_width %}
  {% when 'x-small' %}
    {% assign max_width_class = 'max-w-xs' %}
  {% when 'small' %}
    {% assign max_width_class = 'max-w-sm' %}
  {% when 'medium' %}
    {% assign max_width_class = 'max-w-lg' %}
  {% when 'large' %}
    {% assign max_width_class = 'max-w-3xl' %}
  {% when 'x-large' %}
    {% assign max_width_class = 'max-w-6xl' %}{% endcase %}

{% comment %}
  Get positioning settings
{% endcomment %}
{% assign desktop_pos = section.settings.desktop_content_position | default: 'bottom_left' %}
{% assign mobile_pos = section.settings.mobile_content_position | default: 'bottom_left' %}

<style>
  /* Base Styles */
  .banner-{{ section_id }} {
    position: relative;
    overflow: hidden;
    display: flex;
    color: var(--color-text-overlay, #FFFFFF);

    /* Apply height setting */
    min-height: 400px;
    {% if height_size == 'x-small' %} min-height: 300px;
  {% endif %}
  {% if height_size == 'small' %} min-height: 400px;
{% endif %}
{% if height_size == 'medium' %} min-height: 550px;
{% endif %}
{% if height_size == 'large' %} min-height: 700px;
{% endif %}
{% if height_size == 'fit_screen' %} min-height: 100vh;
{% endif %}
}

/* Image Container */
.banner-image-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  {% if section.settings.reveal_image_on_scroll %}
    opacity: 0;
    transition: opacity 1s ease-out;
  {% endif %}
}

{% if section.settings.reveal_image_on_scroll %}
  .banner-{{ section_id }}
  .revealed .banner-image {
    opacity: 1;
  }
{% endif %}

/* Overlay */
.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background-color: var(--color-overlay, #000000);
  opacity: var(--opacity-overlay, 0.3);
}

/* Content Container */
.banner-content-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  padding: 2rem;
  display: flex;
}

/* Content Inner Container */
.banner-content-inner {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
}

/* --- POSITIONING CLASSES --- */

/* Desktop Positioning */@media (min-width: 768px) {
  /* Combine classes for content wrapper */
  {% if desktop_pos contains 'top' %}
    .banner-{{ section_id }}
    .banner-content-container {
      justify-content: flex-start;
    }
  {% elsif desktop_pos contains 'middle' %}
  .banner-{{ section_id }}
  .banner-content-container {
    justify-content: center;
  }
{% elsif desktop_pos contains 'bottom' %}
.banner-{{ section_id }}
.banner-content-container {
  justify-content: flex-end;
}
{% endif %}

{% if desktop_pos contains '_left' %}
  .banner-{{ section_id }}
  .banner-content-container {
    align-items: flex-start;
    text-align: left;
  }
{% elsif desktop_pos contains '_center' %}
.banner-{{ section_id }}
.banner-content-container {
  align-items: center;
  text-align: center;
}
{% elsif desktop_pos contains '_right' %}
.banner-{{ section_id }}
.banner-content-container {
  align-items: flex-end;
  text-align: right;
}
{% endif %}
}

/* Mobile Positioning */
@media (max-width: 767px) {
  /* Combine classes for content wrapper */
  {% if mobile_pos contains 'top' %}
    .banner-{{ section_id }}
    .banner-content-container {
      justify-content: flex-start;
    }
  {% elsif mobile_pos contains 'middle' %}
  .banner-{{ section_id }}
  .banner-content-container {
    justify-content: center;
  }
{% elsif mobile_pos contains 'bottom' %}
.banner-{{ section_id }}
.banner-content-container {
  justify-content: flex-end;
}
{% endif %}

{% if mobile_pos contains '_left' %}
  .banner-{{ section_id }}
  .banner-content-container {
    align-items: flex-start;
    text-align: left;
  }
{% elsif mobile_pos contains '_center' %}
.banner-{{ section_id }}
.banner-content-container {
  align-items: center;
  text-align: center;
}
{% elsif mobile_pos contains '_right' %}
.banner-{{ section_id }}
.banner-content-container {
  align-items: flex-end;
  text-align: right;
}
{% endif %}

.banner-content-container {
  padding: 1.5rem;
}
}

/* --- TYPOGRAPHY USING GLOBAL SETTINGS --- */

/* Subheading */.banner-content-inner .subheading {
  {% if settings.type_header_family != blank %}
    font-family: {{ settings.type_header_family.family }}, 
    {{ settings.type_header_family.fallback_families }};
  {% endif %}
  font-size: 11px;
  font-weight: 400;
  letter-spacing: 3px;
  text-transform: uppercase;
  margin-bottom: 1.5rem;
  line-height: 1.4;
  opacity: 0.95;
  color: inherit;
}

/* Heading */
.banner-content-inner .heading {
  {% if settings.type_header_family != blank %}
    font-family: {{ settings.type_header_family.family }}, 
    {{ settings.type_header_family.fallback_families }};
  {% endif %}
  font-size: var(--font-size-heading-large);
  font-weight: 300;
  line-height: 1.2;
  margin-bottom: 2rem;
  text-transform: uppercase;
  letter-spacing: 5px;
  color: inherit;
}

/* Body Text */
.banner-content-inner .text {
  {% if settings.type_body_family != blank %}
    font-family: {{ settings.type_body_family.family }}, 
    {{ settings.type_body_family.fallback_families }};
  {% endif %}
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-body);
  line-height: var(--line-height-body);
  margin-bottom: 2rem;
  color: inherit;
}

/* Button using global button settings */
.banner-button {
  {% if settings.type_button_family != blank %}
    font-family: {{ settings.type_button_family.family }}, 
    {{ settings.type_button_family.fallback_families }};
  {% endif %}
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 2px;
  text-transform: uppercase;
  border-radius: 0;
  padding: 16px 40px !important;
  display: inline-block;
  border: none;
  background-color: var(--color-button-primary-bg, #FFFFFF);
  color: var(--color-button-primary-text, #1a1a1a);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  text-decoration: none;
  margin-top: 2rem;
}

/* Button Hover Animation */
.banner-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.7s ease;
  z-index: 1;
}

.banner-button:hover::before {
  left: 100%;
}

.banner-button:hover {
  background-color: var(--color-button-primary-hover, #f8f8f8);
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.banner-button span {
  position: relative;
  z-index: 2;
}

/* Text Color */
.banner-content-container .text-content {
  color: inherit;
}

/* Mobile Typography Adjustments */
@media (max-width: 767px) {
  .banner-content-inner .subheading {
    font-size: 10px;
    letter-spacing: 2px;
    margin-bottom: 1rem;
  }

  .banner-content-inner .heading {
    font-size: clamp(22px, 5vw, 32px);
    letter-spacing: 3px;
    margin-bottom: 1.5rem;
  }

  .banner-button {
    font-size: 10px;
    padding: 14px 32px !important;
    margin-top: 1.5rem;
  }
}
</style>

<section
  class="section banner-{{ section_id }} color-scheme-{{ section.settings.color_scheme.id }}"
  data-section-id="{{ section_id }}"
  {% unless section.settings.remove_vertical_spacing %}
  style="padding: 0;"
  {% endunless %}>

  <div class="banner-image-wrapper">
    {% if image != blank %}
      {% assign img_url = image | image_url: width: 2500 %}
      <picture>
        {% if mobile_image != blank %}
          {% assign mobile_img_url = mobile_image | image_url: width: 1100 %}
          <source media="(max-width: 767px)" srcset="{{ mobile_img_url }}">
        {% endif %}
        <img
          src="{{ img_url }}"
          alt="{{ image.alt | default: section.settings.heading }}"
          class="banner-image"
          loading="lazy"
          width="1"
          height="1">
      </picture>
    {% endif %}
  </div>

  <div class="banner-overlay"></div>

  <div class="banner-content-container">
    <div class="banner-content-inner container px-6 md:px-12 {{ max_width_class }}">
      <div class="text-content">
        {% if section.settings.subheading != blank %}
          <p class="subheading mb-2">{{ section.settings.subheading | escape }}</p>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2 class="heading">{{ section.settings.heading | escape }}</h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div class="text mb-6">
            {{ section.settings.text }}
          </div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <a href="{{ section.settings.button_link }}" class="banner-button">
            <span>{{ section.settings.button_label | escape }}</span>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% if section.settings.reveal_image_on_scroll %}
  <script>
            document.addEventListener('DOMContentLoaded', function() {
              const sectionElement = document.querySelector('.banner-{{ section_id }}');
              if (!sectionElement) return;
              
              if ('IntersectionObserver' in window) {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('revealed');
              observer.unobserve(entry.target);
            }
          });
        }, { 
          threshold: 0.1,
          rootMargin: '50px 0px 50px 0px'
        });
        
        observer.observe(sectionElement);
              } else {
        // Fallback for browsers without IntersectionObserver
        sectionElement.classList.add('revealed');
              }
            });
  </script>
{% endif %}

