{% comment %}
  Media Grid Hero Section
  -----------------------
  Layout: One large item (left) and two stacked smaller items (right).
  Uses CSS Grid with spans for desktop layout.
  Implements global color scheme and typography settings.
{% endcomment %}

{% liquid
  assign section_id = section.id
%}

<style>
  /* Apply global color scheme */
  .color-scheme-{{ section.settings.color_scheme.id }} {
    /* --- GLOBAL COLOR SCHEME VARIABLES --- */
    --background: {{ section.settings.color_scheme.settings.background }};
    --primary-text: {{ section.settings.color_scheme.settings.primary_text }};
    --secondary-text: {{ section.settings.color_scheme.settings.secondary_text }};
    --header-text: {{ section.settings.color_scheme.settings.header_text }};
    --link: {{ section.settings.color_scheme.settings.link }};
    --button-filled: {{ section.settings.color_scheme.settings.button_filled }};
    --button-filled-label: {{ section.settings.color_scheme.settings.button_filled_label }};
    --border: {{ section.settings.color_scheme.settings.border }};

    /* --- GLOBAL TYPOGRAPHY VARIABLES --- */
    {%- assign heading_font = settings.font_heading -%}
    {%- assign body_font = settings.font_body -%}

    --font-heading: {{ heading_font.family }}, 
    {{ heading_font.fallback_families }};
    --font-body: {{ body_font.family }}, 
    {{ body_font.fallback_families }};

    --font-weight-normal: {{ settings.font_weight_normal }};
    --font-weight-bold: {{ settings.font_weight_bold }};

    --font-size-base: {{ settings.font_size_base }}px;
    --font-size-heading-large: {{ settings.font_size_heading_large }}px;
    --font-size-heading-medium: {{ settings.font_size_heading_medium }}px;

    --font-weight-body: var(--font-weight-normal);
    --font-weight-body-bold: var(--font-weight-bold);
    --font-weight-heading: var(--font-weight-normal);
    --font-weight-heading-bold: var(--font-weight-bold);
  }

  /* --- BASE STYLES --- */
  .media-grid-{{ section_id }} {
    padding-top: 50px;
    padding-bottom: 50px;
    background-color: var(--background);
    font-family: var(--font-body);
  }

  .grid-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    gap: 20px;

    /* Desktop Layout (3 columns, 2 rows for alignment) */
    grid-template-columns: 2fr 1fr;
    grid-template-rows: repeat(2, minmax(250px, 1fr));
    grid-template-areas: "large small1" "large small2";
  }

  /* --- GRID ITEM STYLING --- */
  .grid-item {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--header-text);
    color: var(--background);
    min-height: 250px;
    transition: transform 0.3s ease;
    text-decoration: none;
  }

  .grid-item:hover {
    transform: scale(0.99);
  }

  .grid-item__content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 20px;
    font-size: var(--font-size-heading-large);
    font-weight: var(--font-weight-heading);
    text-transform: uppercase;
    letter-spacing: 3px;
    font-family: var(--font-heading);
    color: inherit;
  }

  /* Image/Content Overlays and Zoom */
  .grid-item__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 4s ease-out;
  }

  .grid-item:hover .grid-item__image {
    transform: scale(1.05);
  }

  .grid-item__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    z-index: 5;
  }

  /* --- SPECIFIC GRID AREAS --- */
  .grid-item[data-position="0"] {
    grid-area: large;
  }
  .grid-item[data-position="1"] {
    grid-area: small1;
  }
  .grid-item[data-position="2"] {
    grid-area: small2;
  }

  /* --- HEADER STYLING --- */
  .section-header-{{ section_id }} {
    text-align: center;
    margin-bottom: 40px;
    letter-spacing: 5px;
    font-size: var(--font-size-heading-large);
    color: var(--header-text);
    font-family: var(--font-heading);
    font-weight: var(--font-weight-heading);
    text-transform: uppercase;
  }

  /* Block-specific text color overrides */
  {% for block in section.blocks %}
    {% if block.settings.text_color != blank %}
      .grid-item-{{ block.id }}
      .grid-item__content {
        color: {{ block.settings.text_color }};
      }
    {% endif %}

    {% if block.settings.background_color != blank %}
      .grid-item-{{ block.id }} {
        background-color: {{ block.settings.background_color }};
      }
    {% endif %}
  {% endfor %}

  /* --- RESPONSIVENESS (Mobile/Tablet) --- */
  @media (max-width: 989px) {
    .grid-container {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      grid-template-areas: none;
    }

    .grid-item[data-position="0"],
    .grid-item[data-position="1"],
    .grid-item[data-position="2"] {
      grid-area: unset;
      min-height: 350px;
    }

    .grid-item__content {
      font-size: var(--font-size-heading-medium);
      letter-spacing: 2px;
    }

    .section-header-{{ section_id }} {
      font-size: var(--font-size-heading-medium);
      letter-spacing: 3px;
    }
  }
</style>

<div class="color-scheme-{{ section.settings.color_scheme.id }}">
  <section class="media-grid-{{ section_id }}">
    <div class="section-header-{{ section_id }}">
      {% if section.settings.heading != blank %}
        {{ section.settings.heading | escape }}
      {% else %}
        MEDIA GRID
      {% endif %}
    </div>

    <div class="grid-container">
      {% assign blocks_to_render = section.blocks | where: 'type', 'grid_item' | slice: 0, 3 %}

      {% for block in blocks_to_render %}
        {% liquid
          assign block_image = block.settings.image
          assign overlay_opacity = block.settings.overlay_opacity | times: 0.01
          assign text_color = block.settings.text_color
          assign bg_color = block.settings.background_color
        %}

        <a
          href="{{ block.settings.link }}"
          class="grid-item grid-item-{{ block.id }}"
          data-position="{{ forloop.index0 }}"
          {{ block.shopify_attributes }}
          style="
            {% if bg_color != blank %}background-color: {{ bg_color }};{% endif %}
            {% if text_color != blank %}color: {{ text_color }};{% endif %}
          ">

          {% if block_image != blank %}
            <img
              class="grid-item__image"
              src="{{ block_image | image_url: width: 1000 }}"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
              height=""
              width="">
          {% endif %}

          <div class="grid-item__overlay" style="background-color: rgba(0, 0, 0, {{ overlay_opacity }});"></div>

          <div class="grid-item__content">
            {{ block.settings.title | default: "Grid Item " | append: forloop.index | escape }}
          </div>
        </a>
      {% endfor %}
    </div>
  </section>
</div>

{% schema %}
  {
    "name": "Media Grid",
    "tag": "section",
    "class": "section-media-grid",
    "max_blocks": 3,
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "scheme_1"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Media Grid"
      }
    ],
    "blocks": [
      {
        "type": "grid_item",
        "name": "Grid Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title Text",
            "default": "WOMEN"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "default": "/collections/all"
          },
          {
            "type": "header",
            "content": "Customization (Optional)"
          }, {
            "type": "color",
            "id": "background_color",
            "label": "Background Color (Override)",
            "info": "Used if no image is set."
          }, {
            "type": "color",
            "id": "text_color",
            "label": "Text Color (Override)"
          }, {
            "type": "range",
            "id": "overlay_opacity",
            "min": 0,
            "max": 100,
            "step": 5,
            "unit": "%",
            "label": "Image Overlay Opacity",
            "default": 10
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Media Grid with Hero Layout",
        "category": "Image",
        "settings": {
          "color_scheme": "scheme_1",
          "heading": "MEDIA GRID"
        },
        "blocks": [
          {
            "type": "grid_item",
            "settings": {
              "title": "WOMEN",
              "overlay_opacity": 10
            }
          }, {
            "type": "grid_item",
            "settings": {
              "title": "MEN",
              "overlay_opacity": 10
            }
          }, {
            "type": "grid_item",
            "settings": {
              "title": "ACCESSORIES",
              "overlay_opacity": 10
            }
          }
        ]
      }
    ]
  }
{% endschema %}