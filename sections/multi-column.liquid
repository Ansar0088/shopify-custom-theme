{%- comment -%}
  SECTION: Multi-Column Content
  Clean, responsive multi-column section with smaller font sizes
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .multi-column__header {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: 3rem;
  }

  .multi-column__subheading {
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 0.75rem;
    color: {{ section.settings.subheading_color }};
    opacity: 0.8;
    font-weight: 500;
  }

  .multi-column__heading {
    font-size: 1.75rem;
    font-weight: 400;
    text-transform: uppercase;
    margin: 0 0 1.5rem;
    color: {{ section.settings.heading_color }};
    line-height: 1.3;
  }

  .multi-column__description {
    font-size: 1rem;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
  }

  .multi-column__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.column_gap }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .multi-column__item {
    text-align: {{ section.settings.column_text_alignment }};
    padding: 2rem 1.5rem;
  }

  .multi-column__item-heading {
    font-size: 1.125rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    color: {{ section.settings.heading_color }};
    line-height: 1.4;
  }

  .multi-column__item-content {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
  }

  @media screen and (max-width: 989px) {
    .multi-column__heading {
      font-size: 1.5rem;
    }

    .multi-column__grid {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
      gap: {{ section.settings.column_gap_mobile }}px;
    }

    .multi-column__item {
      padding: 1.5rem 1rem;
    }
  }

  @media screen and (max-width: 749px) {
    .multi-column__heading {
      font-size: 1.375rem;
    }

    .multi-column__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .multi-column__item {
      padding: 1.5rem 1rem;
    }

    .multi-column__item-heading {
      font-size: 1.0625rem;
    }

    .multi-column__item-content {
      font-size: 0.875rem;
    }
  }

  /* Ensure proper container width */
  .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  @media screen and (min-width: 750px) {
    .page-width {
      padding: 0 40px;
    }
  }
{%- endstyle -%}

<section class="section-{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.subheading != blank or section.settings.heading != blank or section.settings.description != blank -%}
      <div class="multi-column__header">
        {%- if section.settings.subheading != blank -%}
          <p class="multi-column__subheading">{{ section.settings.subheading | escape }}</p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h2 class="multi-column__heading">{{ section.settings.heading | escape }}</h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="multi-column__description">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="multi-column__grid">
      {%- for block in section.blocks -%}
        <div class="multi-column__item" {{ block.shopify_attributes }}>
          {%- if block.settings.heading != blank -%}
            <h3 class="multi-column__item-heading">{{ block.settings.heading | escape }}</h3>
          {%- endif -%}

          {%- if block.settings.content != blank -%}
            <div class="multi-column__item-content">{{ block.settings.content }}</div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

