{%- style -%}
  /* --- GLOBAL COLOR SCHEME VARIABLES --- */
  .color-scheme-{{ section.settings.color_scheme.id }} {
    --background: {{ section.settings.color_scheme.settings.background }};
    --primary-text: {{ section.settings.color_scheme.settings.primary_text }};
    --secondary-text: {{ section.settings.color_scheme.settings.secondary_text }};
    --header-text: {{ section.settings.color_scheme.settings.header_text }};
    --link: {{ section.settings.color_scheme.settings.link }};
    --button-filled: {{ section.settings.color_scheme.settings.button_filled }};
    --button-filled-label: {{ section.settings.color_scheme.settings.button_filled_label }};
    --button-outline-label: {{ section.settings.color_scheme.settings.button_outline_label }};
    --border: {{ section.settings.color_scheme.settings.border }};
    --tag: {{ section.settings.color_scheme.settings.tag }};
    --tag-label: {{ section.settings.color_scheme.settings.tag_label }};
    --rating-stars: {{ section.settings.color_scheme.settings.rating_stars }};

    /* --- GLOBAL TYPOGRAPHY VARIABLES --- */
    {%- comment -%} Get font families from theme settings {%- endcomment -%}
  {%- assign heading_font = settings.font_heading -%}
  {%- assign body_font = settings.font_body -%}

  --font-heading: {{ heading_font.family }}, 
  {{ heading_font.fallback_families }};
  --font-body: {{ body_font.family }}, 
  {{ body_font.fallback_families }};

  {%- comment -%} Get font weights from theme settings {%- endcomment -%}
--font-weight-normal: {{ settings.font_weight_normal }};
--font-weight-bold: {{ settings.font_weight_bold }};

{%- comment -%} Get font sizes from theme settings {%- endcomment -%}
--font-size-base: {{ settings.font_size_base }}px;
--font-size-heading-large: {{ settings.font_size_heading_large }}px;
--font-size-heading-medium: {{ settings.font_size_heading_medium }}px;
--font-size-heading-small: {{ settings.font_size_heading_small }}px;
--font-size-body-large: {{ settings.font_size_body_large }}px;
--font-size-body-small: {{ settings.font_size_body_small }}px;

/* Map body and heading weights to global settings */
--font-weight-body: var(--font-weight-normal);
--font-weight-body-bold: var(--font-weight-bold);
--font-weight-heading: var(--font-weight-normal);
--font-weight-heading-bold: var(--font-weight-bold);

/* --- SECTION SPECIFIC COLORS --- */
--section-bg: var(--background);
--section-text: var(--primary-text);
--section-heading: var(--header-text);
--section-subheading: var(--secondary-text);
}

.section-{{ section.id }} {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  background-color: var(--section-bg);
  color: var(--section-text);
  font-family: var(--font-body);
  font-weight: var(--font-weight-body);
  font-size: var(--font-size-base);
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

/* Header Styles with Global Fonts */
.multi-column__header {
  text-align: {{ section.settings.heading_alignment }};
  margin-bottom: 3rem;
}

.multi-column__subheading {
  font-size: var(--font-size-body-small);
  letter-spacing: 0.1em;
  text-transform: uppercase;
  margin-bottom: 0.75rem;
  color: var(--section-subheading);
  opacity: 0.8;
  font-weight: var(--font-weight-body-bold);
  font-family: var(--font-body);
}

.multi-column__heading {
  font-size: var(--font-size-heading-medium);
  font-weight: var(--font-weight-heading-bold);
  text-transform: uppercase;
  margin: 0 0 1.5rem;
  color: var(--section-heading);
  line-height: 1.3;
  font-family: var(--font-heading);
}

@media (max-width: 989px) {
  .multi-column__heading {
    font-size: var(--font-size-heading-small);
  }
}

@media (max-width: 749px) {
  .multi-column__heading {
    font-size: calc(var(--font-size-heading-small) * 0.9);
  }
}

.multi-column__description {
  font-size: var(--font-size-body-large);
  line-height: 1.6;
  margin: 0 auto;
  color: var(--section-text);
  opacity: 0.8;
  font-family: var(--font-body);
  font-weight: var(--font-weight-body);
}

@media (max-width: 749px) {
  .multi-column__description {
    font-size: var(--font-size-base);
  }
}

/* Grid Layout */
.multi-column__grid {
  display: grid;
  grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
  gap: {{ section.settings.column_gap }}px;
  max-width: 1200px;
  margin: 0 auto;
}

/* Column Items */
.multi-column__item {
  text-align: {{ section.settings.column_text_alignment }};
  padding: 2rem 1.5rem;
  display: flex;
  flex-direction: column;
  height: 100%;
  {% if section.settings.vertical_alignment == 'top' %}
    align-items: flex-start;
  {% elsif section.settings.vertical_alignment == 'center' %}
    align-items: center;
  {% elsif section.settings.vertical_alignment == 'bottom' %}
    align-items: flex-end;
  {% endif %}
}

.multi-column__item-heading {
  font-size: var(--font-size-heading-small);
  font-weight: var(--font-weight-heading-bold);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 1rem;
  color: var(--section-heading);
  line-height: 1.4;
  font-family: var(--font-heading);
  width: 100%;
  text-align: {{ section.settings.column_text_alignment }};
}

.multi-column__item-content {
  font-size: var(--font-size-base);
  line-height: 1.6;
  color: var(--section-text);
  opacity: 0.8;
  font-family: var(--font-body);
  font-weight: var(--font-weight-body);
  width: 100%;
  text-align: {{ section.settings.column_text_alignment }};
  flex-grow: 1;
}

/* Column Content Alignment */
.multi-column__item-content--align-left {
  text-align: left !important;
}

.multi-column__item-content--align-center {
  text-align: center !important;
}

.multi-column__item-content--align-right {
  text-align: right !important;
}

/* Responsive Styles */
@media screen and (max-width: 989px) {
  .multi-column__grid {
    grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
    gap: {{ section.settings.column_gap_mobile }}px;
  }

  .multi-column__item {
    padding: 1.5rem 1rem;
  }

  .multi-column__item-heading {
    font-size: calc(var(--font-size-heading-small) * 0.9);
  }

  .multi-column__item-content {
    font-size: var(--font-size-body-small);
  }
}

@media screen and (max-width: 749px) {
  .multi-column__grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .multi-column__item {
    padding: 1.5rem 1rem;
    align-items: {{ section.settings.mobile_vertical_alignment }}
     !important;
  }

  .multi-column__item-heading {
    font-size: calc(var(--font-size-heading-small) * 0.85);
  }

  .multi-column__item-content {
    font-size: var(--font-size-body-small);
  }
}

/* Container */
.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

@media screen and (min-width: 750px) {
  .page-width {
    padding: 0 40px;
  }
}

/* Fallback Colors (when no color scheme is selected) */
{% unless section.settings.color_scheme %}
  .section-{{ section.id }} {
    background-color: {{ section.settings.background_color | default: '#f7f7f7' }};
    color: {{ section.settings.text_color | default: '#333333' }};
  }

  .multi-column__subheading {
    color: {{ section.settings.subheading_color | default: '#666666' }};
  }

  .multi-column__heading {
    color: {{ section.settings.heading_color | default: '#1a1a1a' }};
  }

  .multi-column__item-heading {
    color: {{ section.settings.heading_color | default: '#1a1a1a' }};
  }
{% endunless %}
{%- endstyle -%}

<div class="color-scheme-{{ section.settings.color_scheme.id }}">
  <section class="section-{{ section.id }}">
    <div class="page-width">
      {%- if section.settings.subheading != blank or section.settings.heading != blank or section.settings.description != blank -%}
        <div class="multi-column__header">
          {%- if section.settings.subheading != blank -%}
            <p class="multi-column__subheading">{{ section.settings.subheading | escape }}</p>
          {%- endif -%}

          {%- if section.settings.heading != blank -%}
            <h2 class="multi-column__heading">{{ section.settings.heading | escape }}</h2>
          {%- endif -%}

          {%- if section.settings.description != blank -%}
            <div class="multi-column__description">{{ section.settings.description }}</div>
          {%- endif -%}
        </div>
      {%- endif -%}

      <div class="multi-column__grid">
        {%- for block in section.blocks -%}
          <div
            class="multi-column__item"
            {{ block.shopify_attributes }}
            {% if block.settings.individual_alignment != 'default' %}
            style="text-align: {{ block.settings.individual_alignment }};"
            {% endif %}>

            {%- if block.settings.heading != blank -%}
              <h3
                class="multi-column__item-heading"
                {% if block.settings.individual_alignment != 'default' %}
                style="text-align: {{ block.settings.individual_alignment }};"
                {% endif %}>
                {{ block.settings.heading | escape }}
              </h3>
            {%- endif -%}

            {%- if block.settings.content != blank -%}
              <div
                class="multi-column__item-content 
                {% if block.settings.individual_alignment == 'left' %}multi-column__item-content--align-left
                {% elsif block.settings.individual_alignment == 'center' %}multi-column__item-content--align-center
                {% elsif block.settings.individual_alignment == 'right' %}multi-column__item-content--align-right
                {% endif %}"
                {% if block.settings.individual_alignment != 'default' %}
                style="text-align: {{ block.settings.individual_alignment }};"
                {% endif %}>
                {{ block.settings.content }}
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </section>
</div>

