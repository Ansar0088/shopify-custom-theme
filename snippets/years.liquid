<script>
    // --- Data Store for Collaboration Timeline ---
    const collaborationData = {
        '2013': {
            tag: 'THE BEGINNING',
            title: 'LÉO ET VIOLETTE IS BORN',
            body: 'Léo and Violette launch their first collection of small leather goods, focused on timeless design and artisanal quality. They commit to being 100% online from day one.',
            image: "{{ 'cpls-one.png' | asset_url }}",
            alt: 'Founders starting the brand in 2013'
        },
        '2014': {
            tag: 'NEW HORIZONS',
            title: 'FIRST BAG COLLECTION',
            body: 'Following the success of the small leather goods, the brand expands into handbags, blending functional urban design with elegant leather materials sourced from Italy.',
            image: "{{ 'cpl-two.png' | asset_url }}",
            alt: 'Display of the first handbag collection'
        },
        '2015': {
            tag: 'GLOBAL REACH',
            title: 'POP-UP IN EUROPE',
            body: 'Léo et Violette opens its first temporary physical store in Paris, followed by successful pop-up installations in other European capitals, growing its international community.',
            image: "https://prestige-theme-allure.myshopify.com/cdn/shop/files/Timeline_-_Desktop_-_2015.jpg?v=1677505855&width=600",
            alt: 'Photo of a brand pop-up store'
        },
        '2017': {
            tag: 'DESIGN FOCUS',
            title: 'THE DALIÁ BACKPACK LAUNCH',
            body: 'Introduction of the iconic Daliá backpack, designed specifically for the modern professional, combining style, space, and comfort for daily commutes.',
            image: "https://prestige-theme-allure.myshopify.com/cdn/shop/files/Timeline_-_Desktop_-_2017.jpg?v=1677506209&width=600",
            alt: 'Model wearing the Daliá backpack'
        },
        '2020': {
            tag: 'SUSTAINABILITY PUSH',
            title: 'RECYCLED LEATHER INITIATIVE',
            body: 'The brand formalizes its commitment to the environment by introducing a line using certified recycled leather and focusing on minimizing waste in the production process.',
            image: "https://prestige-theme-allure.myshopify.com/cdn/shop/files/Timeline_-_Desktop_-_2020.jpg?v=1677506700&width=600",
            alt: 'Detail photo of recycled leather material'
        },
        '2021': {
            tag: 'FIRST COLLABORATION',
            title: 'LÉO ET VIOLETTE X WENDY SWAN',
            body: 'The meeting between Wendy and Léo et Violette gave birth to our new bag: The Dalia. Every detail, from the choice of leather quality to the metal parts, has been carefully thought out.',
            image: "{{ 'cpl-four.png' | asset_url }}",
            alt: 'Woman holding a black leather handbag above her head'
        }
    };

    // --- DOM Elements ---
    const timelineYears = document.querySelectorAll('.timeline-year');
    const imageElement = document.getElementById('collab-image');
    const contentContainer = document.getElementById('collab-content');
    const tagElement = document.getElementById('collab-tag');
    const titleElement = document.getElementById('collab-title');
    const bodyElement = document.getElementById('collab-body');

    // --- Function to update content smoothly ---
    function updateContent(year) {
        const data = collaborationData[year];

        if (!data) return; // Exit if data not found

        // 1. Start Fade-out for Image and Text
        contentContainer.classList.add('content-fading');
        imageElement.style.opacity = '0';

        // Wait for fade-out to complete (400ms based on CSS transition)
        setTimeout(() => {
            // 2. Change content (DOM update)
            imageElement.src = data.image;
            imageElement.alt = data.alt;
            tagElement.textContent = data.tag;
            titleElement.textContent = data.title;
            bodyElement.textContent = data.body;
            
            // 3. Update active state for the years
            timelineYears.forEach(yearEl => {
                yearEl.classList.remove('active');
                if (yearEl.getAttribute('data-year') === year) {
                    yearEl.classList.add('active');
                }
            });

            // 4. Start Fade-in
            contentContainer.classList.remove('content-fading');
            imageElement.style.opacity = '1';

        }, 400); // Must match or exceed the CSS transition time
    }

    // --- Event Listeners ---
    timelineYears.forEach(yearEl => {
        yearEl.addEventListener('click', () => {
            const year = yearEl.getAttribute('data-year');
            updateContent(year);
        });
    });

</script>